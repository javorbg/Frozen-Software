<fluent:RibbonTabItem x:Class="FrozenSoftware.Sales.SalesRibbonTabItem"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:local="clr-namespace:FrozenSoftware.Sales"
                      xmlns:fluent="urn:fluent-ribbon"
                      mc:Ignorable="d" Header="Sales"
                      d:DesignHeight="450" d:DesignWidth="800">

    <fluent:RibbonGroupBox Header="Common">
        <fluent:Button Header="Masure unit" Command="{Binding ShowTabCommand}" CommandParameter="{x:Type local:MeasureUnitTab}"> 
            <fluent:Button.LargeIcon>
                <Path Data="{DynamicResource Contact}" Fill="{DynamicResource IconBrush}" Stretch="Uniform" Margin="2"/>
            </fluent:Button.LargeIcon>
        </fluent:Button>
    </fluent:RibbonGroupBox>
</fluent:RibbonTabItem>
