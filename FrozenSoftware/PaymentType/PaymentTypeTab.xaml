<TabItem x:Class="FrozenSoftware.PaymentTypeTab"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:FrozenSoftware"
         xmlns:prism="http://prismlibrary.com/"
         prism:ViewModelLocator.AutoWireViewModel="True"
         Header="Payment Type"
         mc:Ignorable="d" Style="{DynamicResource FSTabItemStyle}"
         d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Margin="2" ItemsSource="{Binding PaymentTypes}" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Name"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</TabItem>
